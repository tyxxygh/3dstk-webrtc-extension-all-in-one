    <Style x:Key="Button.Conversation.Base" TargetType="Button">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Background" Value="LightGray" />
    </Style>

    <Style x:Key="Button.Conversation.BasePressed" TargetType="Button">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Background" Value="Gray" />
    </Style>


    <Style x:Key="Button.Conversation.Call.AudioCall" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.Call.Audio}" />
    </Style>
    <Style x:Key="Button.Conversation.Call.VideoCall" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.Call.Video}" />
    </Style>
    <Style x:Key="Button.Conversation.Call.End" TargetType="Button" BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="Content" Value="&#xE137;" />
        <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        <Setter Property="Foreground" Value="Red" />
    </Style>

    <Style x:Key="Button.Conversation.Call.Audio.Mute" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.Microphone}" />
    </Style>
    <Style x:Key="Button.Conversation.Call.Audio.Unmute" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.NoMicrophone}" />
    </Style>

    <Style x:Key="Button.Conversation.Call.Video.Enable" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.NoVideo}" />
    </Style>
    <Style x:Key="Button.Conversation.Call.Video.Disable" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.Video}" />
    </Style>

    <Style x:Key="Button.Conversation.Call.Audio.SpeakerPhoneActive" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.BasePressed}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.SpeakerPhone}" />
    </Style>
    <Style x:Key="Button.Conversation.Call.Audio.SpeakerPhoneInactive" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.SpeakerPhone}" />
    </Style>

    <Style x:Key="Button.Conversation.Call.Video.SourceSwitch" TargetType="Button"
           BasedOn="{StaticResource Button.Conversation.Base}">
        <Setter Property="ContentTemplate" Value="{StaticResource Glyphs.Call.VideoSourceSwitch}" />
    </Style>

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" Inverted="True" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:BoolToBrushConverter x:Key="ContactPresenceBoolToBrushConverter" ColorForTrue="LightGreen"
                                     ColorForFalse="LightGray" />
    <converters:BoolToBrushConverter x:Key="ImBoolToBrushConverter" ColorForFalse="Blue" ColorForTrue="Orange" />
    <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
    <converters:CallStateToVisibilityConverter x:Key="CallStateToVisibilityConverter" />
    <converters:CallStateToVisibilityConverter x:Key="InvertedCallStateToVisibilityConverter" Inverted="True" />
    <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter" />
    <converters:NegatedBoolConverter x:Key="NegatedBoolConverter" />
    <converters:ProportionalConverter x:Key="ProportionalConverter" />
    <converters:FormatDateTimeConverter x:Key="FormatDateTimeConverter" Format="H:mm:ss" />


    <controls:CallState x:Key="CallState.Idle">Idle</controls:CallState>
    <controls:CallState x:Key="CallState.Connected">Connected</controls:CallState>
    <controls:CallState x:Key="CallState.LocalRinging">LocalRinging</controls:CallState>
    <controls:CallState x:Key="CallState.RemoteRinging">RemoteRinging</controls:CallState>
    <controls:CallState x:Key="CallState.Held">Held</controls:CallState>


    <Style x:Key="Default.CommunicationControl.LayoutRoot.Style" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="400" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <DataTemplate x:Key="Default.CommunicationControl.Conversations.List.HeaderTemplate">
        <TextBlock Text="{Binding}" Margin="12,5" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </DataTemplate>


    <Style x:Key="Default.CommunicationControl.Conversations.List.Style" TargetType="ListBox">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="12,5" />
        <Setter Property="Background" Value="{ThemeResource ListBoxBackgroundThemeBrush}" />
    </Style>

    <DataTemplate x:Key="Default.CommunicationControl.Conversations.Item.Template">
        <StackPanel Orientation="Horizontal">
            <Ellipse
                Fill="{Binding IsOnline, Mode=OneWay, Converter={StaticResource ContactPresenceBoolToBrushConverter}}"
                Width="15" Height="15" />
            <Image Source="{Binding ProfileSource}" Margin="5" Width="45" Height="45" />
            <TextBlock Text="{Binding Name}" MaxWidth="250" TextTrimming="CharacterEllipsis"
                       FontWeight="{Binding IsHighlighted, Mode=OneWay, Converter={StaticResource BoolToFontWeightConverter}}"
                       VerticalAlignment="Center" Margin="5" />
        </StackPanel>
    </DataTemplate>


    <ControlTemplate x:Key="Default.CommunicationControl.Conversations.Item.InstantMessaging.ItemTemplate"
                     TargetType="ListBoxItem">
        <Grid Margin="3">
            <Border CornerRadius="5" Opacity=".2"
                    Background="{Binding IsHighlighted, Converter={StaticResource ImBoolToBrushConverter}}" />
            <Border Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.RowSpan="2" VerticalAlignment="Top" Height="48" Width="48" Margin="5"
                           Source="{Binding SenderProfileSource}" />
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Body}" TextWrapping="WrapWholeWords" />
                    <TextBlock Grid.Column="1" Grid.Row="1"
                               Text="{Binding DeliveredAt, Converter={StaticResource FormatDateTimeConverter}}"
                               FontSize="11" Foreground="DarkGray" Margin="0,10,0,0" HorizontalAlignment="Right" />
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    <styleSelectors:InstantMessageStyleSelector
        x:Key="Default.CommunicationControl.Conversations.Item.InstantMessaging.ItemStyleSelector">
        <styleSelectors:InstantMessageStyleSelector.PeerMessageStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Background" Value="Blue" />
                <Setter Property="Margin" Value="0,0,40,0" />
                <Setter Property="Template"
                        Value="{StaticResource Default.CommunicationControl.Conversations.Item.InstantMessaging.ItemTemplate}" />
            </Style>
        </styleSelectors:InstantMessageStyleSelector.PeerMessageStyle>
        <styleSelectors:InstantMessageStyleSelector.OwnMessageStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Background" Value="Gray" />
                <Setter Property="Margin" Value="40,0,0,0" />
                <Setter Property="Template"
                        Value="{StaticResource Default.CommunicationControl.Conversations.Item.InstantMessaging.ItemTemplate}" />
            </Style>
        </styleSelectors:InstantMessageStyleSelector.OwnMessageStyle>
    </styleSelectors:InstantMessageStyleSelector>


    <Style TargetType="controls:CommunicationControl">
        <!--Layout Root-->
        <Setter Property="LayoutRootStyle" Value="{StaticResource Default.CommunicationControl.LayoutRoot.Style}" />
        <!--Conversations List-->
        <Setter Property="ContactListHeaderContent" Value="Conversations" />
        <Setter Property="ContactListHeaderTemplate"
                Value="{StaticResource Default.CommunicationControl.Conversations.List.HeaderTemplate}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CommunicationControl">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsControl Style="{TemplateBinding LayoutRootStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Content="{TemplateBinding ContactListHeaderContent}"
                                                  ContentTemplate="{TemplateBinding ContactListHeaderTemplate}" />
                                <ListBox x:Name="ConversationsList"
                                         Grid.Row="1" Grid.Column="0"
                                         Style="{StaticResource Default.CommunicationControl.Conversations.List.Style}"
                                         ItemsSource="{TemplateBinding Conversations}"
                                         SelectedValue="{Binding SelectedConversation, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                         ItemTemplate="{StaticResource Default.CommunicationControl.Conversations.Item.Template}" />
                            </Grid>
                            <Border
                                Visibility="{Binding SelectedConversation, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                                Grid.Column="1" Margin="3" BorderBrush="DarkGray" BorderThickness="1,0,0,0" />
                            <Grid Grid.Column="2"
                                  Visibility="{Binding SelectedConversation, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                <ListBox Background="White" BorderThickness="0"
                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                         ItemsSource="{TemplateBinding Conversations}"
                                         SelectedValue="{Binding SelectedConversation, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Grid />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Grid
                                                            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected, Converter = {StaticResource BooleanToVisibilityConverter}}">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button
                                                                        Command="{Binding CloseConversationCommand}"
                                                                        Grid.Column="0" Margin="5"
                                                                        FontFamily="Segoe UI Symbol" Content="&#xE112;"
                                                                        Visibility="{Binding RelativeSource={RelativeSource Self}, Path=IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                    <TextBlock Text="{Binding Name}" Margin="12,5"
                                                                               VerticalAlignment="Center"
                                                                               Grid.Column="1"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <Button Command="{Binding AudioCallCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.AudioCall}"
                                                                            Grid.Column="2" />
                                                                    <Button Command="{Binding VideoCallCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.VideoCall}"
                                                                            Grid.Column="3" />
                                                                </Grid>

                                                                <ListBox Grid.Row="1"
                                                                         ItemsSource="{Binding InstantMessages}"
                                                                         Margin="12,5" BorderThickness="0"
                                                                         Background="Transparent"
                                                                         ItemContainerStyleSelector="{StaticResource Default.CommunicationControl.Conversations.Item.InstantMessaging.ItemStyleSelector}"
                                                                         behaviors:ListBoxAutoScrollBehavior.Enabled="True" />
                                                                <Grid Grid.Row="2" Margin="12,5">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBox
                                                                        Text="{Binding InstantMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        PlaceholderText="Enter a message" Margin="12,5"
                                                                        behaviors:ReturnKeyCommandBehavior.Command="{Binding SendInstantMessageCommand}" />
                                                                    <Button
                                                                        Command="{Binding SendInstantMessageCommand}"
                                                                        Margin="5"
                                                                        Grid.Column="1" FontFamily="Segoe UI Symbol"
                                                                        HorizontalContentAlignment="Left"
                                                                        IsTabStop="False"
                                                                        Content="&#xE120;" />
                                                                </Grid>
                                                            </Grid>

                                                            <Grid Background="White"
                                                                  Visibility="{Binding CallState, Converter= {StaticResource InvertedCallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.Idle}}">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>
                                                                <Grid x:Name="RemoteCallGrid" Grid.Row="0"
                                                                      Grid.RowSpan="2" HorizontalAlignment="Stretch"
                                                                      VerticalAlignment="Stretch"
                                                                      attachedProperties:ActualSize.Enabled="True">
                                                                    <Image Source="{Binding ProfileSource}"
                                                                           Visibility="{Binding ShowPeerVideoPlaceHolder, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                           VerticalAlignment="Stretch"
                                                                           HorizontalAlignment="Stretch" />
                                                                    <ContentControl
                                                                        Visibility="{Binding ShowPeerVideoPlaceHolder, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                                                                        Content="{Binding RemoteVideoRenderer}"
                                                                        HorizontalContentAlignment="Stretch"
                                                                        VerticalContentAlignment="Stretch" />
                                                                    <StackPanel Background="White"
                                                                                VerticalAlignment="Top"
                                                                                HorizontalAlignment="Left"
                                                                                Visibility="{Binding IsPeerVideoAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <TextBlock Foreground="Black" FontSize="10">
                                                                            <Run
                                                                                Text="{Binding RemoteNativeVideoSize.Width}" />
                                                                            <Run Text="x" />
                                                                            <Run
                                                                                Text="{Binding RemoteNativeVideoSize.Height}" />
                                                                            <Run Text="@" />
                                                                            <Run Text="{Binding RemoteFrameRate}" />
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </Grid>

                                                                <Grid x:Name="LocalCallGrid" Grid.Row="0"
                                                                      HorizontalAlignment="Stretch"
                                                                      VerticalAlignment="Stretch">
                                                                    <Image HorizontalAlignment="Right"
                                                                           VerticalAlignment="Bottom"
                                                                           Source="{Binding OwnProfileSource}"
                                                                           Visibility="{Binding ShowSelfVideoPlaceHolder, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                           Width="{Binding ElementName=RemoteCallGrid, Path=(attachedProperties:ActualSize.ActualWidth), Mode=OneWay, Converter={StaticResource ProportionalConverter}}"
                                                                           Height="{Binding ElementName=RemoteCallGrid, Path=(attachedProperties:ActualSize.ActualHeight), Mode=OneWay, Converter={StaticResource ProportionalConverter}}" />
                                                                    <Grid HorizontalAlignment="Right"
                                                                          VerticalAlignment="Bottom">
                                                                        <ContentControl HorizontalAlignment="Right"
                                                                                        VerticalAlignment="Bottom"
                                                                                        Content="{Binding LocalVideoRenderer}"
                                                                                        Visibility="{Binding ShowSelfVideoPlaceHolder, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                                                                                        HorizontalContentAlignment="Stretch"
                                                                                        VerticalContentAlignment="Stretch"
                                                                                        Width="{Binding ElementName=RemoteCallGrid, Path=(attachedProperties:ActualSize.ActualWidth), Mode=OneWay, Converter={StaticResource ProportionalConverter}}"
                                                                                        Height="{Binding ElementName=RemoteCallGrid, Path=(attachedProperties:ActualSize.ActualHeight), Mode=OneWay, Converter={StaticResource ProportionalConverter}}" />
                                                                        <StackPanel Background="White"
                                                                                    VerticalAlignment="Top"
                                                                                    HorizontalAlignment="Left"
                                                                                    Visibility="{Binding IsSelfVideoAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                            <TextBlock Foreground="Black" FontSize="10">
                                                                                <Run
                                                                                    Text="{Binding LocalNativeVideoSize.Width}" />
                                                                                <Run Text="x" />
                                                                                <Run
                                                                                    Text="{Binding LocalNativeVideoSize.Height}" />
                                                                                <Run Text="@" />
                                                                                <Run Text="{Binding LocalFrameRate}" />
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Grid>


                                                                <StackPanel Grid.Row="1" Margin="12,5"
                                                                            Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                    <Button Command="{Binding AnswerCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.AudioCall}"
                                                                            Visibility="{Binding CallState, Converter= {StaticResource CallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.LocalRinging}}" />
                                                                    <Button Command="{Binding HangupCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.End}"
                                                                            Visibility="{Binding CallState, Converter= {StaticResource CallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.RemoteRinging}}" />
                                                                    <Button Command="{Binding HangupCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.End}"
                                                                            Visibility="{Binding CallState, Converter= {StaticResource CallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.Connected}}" />
                                                                    <Button Command="{Binding HangupCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.End}"
                                                                            Visibility="{Binding CallState, Converter= {StaticResource CallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.Held}}" />
                                                                    <Button Command="{Binding RejectCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.End}"
                                                                            Visibility="{Binding CallState, Converter= {StaticResource CallStateToVisibilityConverter}, ConverterParameter={StaticResource CallState.LocalRinging}}" />
                                                                    <Button Command="{Binding MuteMicrophoneCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.Audio.Mute}"
                                                                            Visibility="{Binding IsMicrophoneEnabled, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                    <Button Command="{Binding UnMuteMicrophoneCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.Audio.Unmute}"
                                                                            Visibility="{Binding IsMicrophoneEnabled, Mode=OneWay, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />
                                                                    <Button Command="{Binding SwitchVideoCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.Video.Disable}"
                                                                            Visibility="{Binding ShowVideoOnButton, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                    <Button Command="{Binding SwitchVideoCommand}"
                                                                            Style="{StaticResource Button.Conversation.Call.Video.Enable}"
                                                                            Visibility="{Binding ShowVideoOffButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                    <Button Command="{Binding ActivateSpeakerPhone}"
                                                                            Style="{StaticResource Button.Conversation.Call.Audio.SpeakerPhoneInactive}"
                                                                            Visibility="{Binding ShowActivateSpeakerPhoneButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                    <Button Command="{Binding DeactivateSpeakerPhone}"
                                                                            Style="{StaticResource Button.Conversation.Call.Audio.SpeakerPhoneActive}"
                                                                            Visibility="{Binding ShowDeactivateSpeakerPhoneButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                    <Button Command="{Binding ActivateFrontCamera}"
                                                                            Style="{StaticResource Button.Conversation.Call.Video.SourceSwitch}"
                                                                            Visibility="{Binding ShowSwitchToFrontCamera, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                    <Button Command="{Binding ActivateBackCamera}"
                                                                            Style="{StaticResource Button.Conversation.Call.Video.SourceSwitch}"
                                                                            Visibility="{Binding ShowSwitchToBackCamera, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </ItemsControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>